<%- include('partials/header') -%>
<div class="containe pb-32r">
  <div class="row mt-5">
      <div class="col-12">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="mt-6 col-2 btn btn-primary">Logout</a>
              <a class="btn col-2 btn-primary ml-12 mt-6" href="/feed">Recipe Book</a>
          </div>
          <div class="mt-3" mb-32>
            <h1 class="h2" >Add a recipe</h1>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="recipeName" class="form-label h3">Recipe Name</label>
                  <input type="text" class="form-control" id="recipeName" name="recipeName">
              </div>
              <div class="mb-3">
                <label for="cuisine" class="form-label h3">Cuisine type</label>
                <select class="border h5 ml-9" id="cuisine" name="cuisine">
                  <option value="American">American</option>
                  <option value="Asian">Asian</option>
                  <option value="Italian">Italian</option>
                  <option value="Mexican">Mexican</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="ingredient1" class="form-label">Ingredients</label>
                <input type="text" class="form-control " id="ingredient1" name="ingredient1"></input>
              </div >
              <div class="mb-3">
                <input class="form-control" id="ingredient2" name="ingredient2"></input>
              </div>
              <div class="mb-3">
                <input class="form-control" id="ingredient3" name="ingredient3"></input>
              </div>
              <div class="mb-3">
                <input class="form-control" id="ingredient4" name="ingredient4"></input>
              </div>
              <div class="mb-3">
                <input class="form-control" id="ingredient5" name="ingredient5"></input>
              </div>
              <div class="mb-3">
                <input class="form-control" id="ingredient6" name="ingredient6"></input>
              </div>
              <div class="mb-3">
                <input class="form-control" id="ingredient7" name="ingredient7"></input>
              </div>
              <div class="mb-3">
                <input class="form-control" id="ingredient8" name="ingredient8"></input>
              </div>
              <div class="mb-3">
                <input class="form-control" id="ingredient9" name="ingredient9"></input>
              </div>
              <div class="mb-4">
                <input class="form-control" id="ingredient10" name="ingredient10"></input>
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Steps</label>
                <textarea class="form-control" id="step1" name="step1"></textarea>
              </div>
              <div class="mb-3">
                <textarea class="form-control" id="step2" name="step2"></textarea>
              </div>
              <div class="mb-3">
                <textarea class="form-control" id="step3" name="step3"></textarea>
              </div>
              <div class="mb-3">
                <textarea class="form-control" id="step4" name="step4"></textarea>
              </div>
              <div class="mb-3">
                <textarea class="form-control" id="step5" name="step5"></textarea>
              </div>
              <div class="mb-3">
                <textarea class="form-control" id="step6" name="step6"></textarea>
              </div>
              <div class="mb-12">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn bg-blue-600 text-white" value="Upload">Submit</button>
            </div>
            </form>
          
      </div>
